<style>
  @import "/stylesheets/pages/admin.css";
</style>

<div class="main-app">
  {{> sidebar admin=true}}

  <div class="admin-container">
    {{> header title="Admin"}}
    <div class="admin-collection">
      {{#each users}}
      <div class="admin-user">
        <img src="{{_doc.profilePicture}}" alt="">
        <p>{{_doc.firstName}} {{_doc.lastName}}</p>
        <select name="role">
          <option value="admin" {{#if isAdmin}}selected{{/if}}>Admin</option>
          <option value="teacher" {{#if isTeacher}}selected{{/if}}>Teacher</option>
          <option value="student" {{#if isStudent}}selected{{/if}}>Student</option>
        </select>
      </div>
      {{/each}}
    </div>
  </div>
</div>