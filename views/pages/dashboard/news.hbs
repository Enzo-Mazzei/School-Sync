<div class="create-news">
  <h2>Create News</h2>
  <form action="/dashboard/news" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="content">Content:</label>
    <textarea id="content" name="content" required></textarea>

  <label for="classes">Classes:</label>
    <select id="classes" name="classes" multiple>
      {{#each existingClasses}}
        <option value="{{this._id}}">{{this.number}}{{this.letter}} {{this.year}}</option>
      {{/each}}
    </select>

    <button type="submit">Create</button>
  </form>
</div>

    
<div class="news-list">
  <h2>Recent News</h2>
  {{#each news}}
    <div class="news-card">
      <h3>{{this.title}}</h3>
      <p>{{this.content}}</p>
      <div class="metadata">
        <p class="user">{{this.author.firstName}} {{this.author.lastName}}</p>
        <p class="date">{{toLocaleDate this.date}}</p>
<form action="/dashboard/news/{{this._id}}" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit" class="remove-button">Remove</button>
</form>
      </div>
    </div>
  {{/each}}
</div>
