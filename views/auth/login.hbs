<div class="form__container">
  <form action="" method="POST">
    <h1>Welcome to SchoolSync</h1>
    <div class="form__group">
      <input type="text" placeholder=" " name="email" />
      <label>Email adress</label>
    </div>
    {{! <p class="form__error__message">
      <span class="material-symbols-outlined">error</span>Email is require
    </p> }}
    <div class="form__group">
      <input type="password" placeholder=" " name="password" />
      <label>Password</label>
    </div>
    {{! <p class="form__error__message">
      <span class="material-symbols-outlined">error</span>Password is require
    </p> }}
    <button type="submit">
      <span class="material-symbols-outlined form__button__icon-right">
        login
      </span>
      <span>Continue</span>
      <div class="glow"></div>
    </button>
    <p>Don't have an account? <a href="">Sign Up</a></p>
  </form>
</div>