<div class="form__container">
  <form action="/login" method="POST">
    <h1>Welcome to SchoolSync</h1>
    <div class="form__group {{#if errorEmail}}form__group-error{{/if}}">
      <input type="text" placeholder=" " name="email" value="{{email}}"/>
      <label>Email adress</label>
    </div>
    {{#if errorEmail}}
      <p class="form__error__message">
        <span class="material-symbols-outlined">error</span>
        <span>{{errorMessage}}</span>
      </p>
    {{/if}}
    <div class="form__group {{#if errorPassword}}form__group-error{{/if}}">
      <input type="password" placeholder=" " name="password" value="{{password}}" />
      <label>Password</label>
    </div>
    {{#if errorPassword}}
      <p class="form__error__message">
        <span class="material-symbols-outlined">error</span>
        <span>{{errorMessage}}</span>
      </p>
    {{/if}}
    <button type="submit">
      <span class="material-symbols-outlined form__button__icon-right">
        login
      </span>
      <span>Continue</span>
      <div class="glow"></div>
    </button>
    <p>Don't have an account? <a href="/signup">Sign Up</a></p>
  </form>
</div>