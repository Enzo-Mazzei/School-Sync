<style>
    @import "/stylesheets/components/form.css";
</style>

<form class="form" action="/dashboard/news" method="POST">
    <label class="form-label" for="title">Title
        <span class="form-require">*</span>
    </label>
    <input class="form-input" type="text" id="title" name="title" required>

    <label class="form-label" for="content">Content
        <span class="form-require">*</span>
    </label>
    <textarea class="form-input" id="content" name="content" required></textarea>

    <label class="form-label" for="classes">Classes
        <span class="form-require">*</span>
    </label>

    <select class="form-input" id="classes" name="classes">
        {{#each user.classes}}
        <option value="{{this._id}}">{{this.number}}{{this.letter}} {{this.year}}</option>
        {{/each}}
    </select>

    <button class="form-button" type="submit">Create</button>
</form>